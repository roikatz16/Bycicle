#:import utils kivy.utils
#:import hex kivy.utils.get_color_from_hex
# Filename: my.kv

<MyGrid>:
    location: location
    time: time
    recommendations: recommendations


    GridLayout:
        id: total
        size: root.width, root.height
        cols:1

        ActionBar:
            height: 35
            pos_hint: {'top':1}
            background_image: 'white-bg.png'
            background_color: hex('#c3d9ef')
            ActionView:

                use_separator: True
                ActionPrevious:
                    color: hex('#265b8c')
                    app_icon: 'icons8-bicycle-40.png'
                    title: ' Michal & Roi Bike Routs Recommendation App'
                    with_previous: False
                ActionOverflow:
                MyActionButton:
                    icon: 'icons8-minimize-window-48.png' if self.hovered else "icons8-minimize-window-50.png"
                    on_press: app.root_window.minimize()
                    border: 10,10,10,10
                MyActionButton:
                    icon: 'icons8-minimize-window-48.png' if self.hovered else "icons8-minimize-window-50.png"
                    on_press: app.root_window.minimize()
                    border: 10,10,10,10
                MyActionButton:
                    # important: True
                    icon: 'icons8-close-window-48.png' if self.hovered else 'icons8-close-window-24.png'
                    on_press: app.stop()
                    border: 10,10,10,10


        GridLayout:
            id: inputs
            size: root.width, root.height
            cols:2

            Label:
                text: "What is your current location?"
                bold: True


            TextInput:
                id: location
                multinline: False

            Label:
                text: "How much time would you like to spend?"


            TextInput:
                id: time
                multinline: False

            Label:
                text: "How much location recommendations\n would you like to receive?"


            TextInput:
                id: recommendations
                multinline: False

        Button:
            text:"Recommend me"
            on_press: root.btn()
            font_size: "20sp"
            background_color: (1, 1, 1, 1)
            color: (1, 1, 1, 1)
            size_hint: (1, .3)

