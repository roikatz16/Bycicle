#:import utils kivy.utils
#:import hex kivy.utils.get_color_from_hex
# Filename: my.kv

<MyGrid>:
    location: location
    time: time
    recommendations: recommendations


    GridLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bicycle2.png'
        id: total
        size: root.width, root.height
        cols:1

        ActionBar:
            height: 35
            pos_hint: {'top':1}
            background_image: 'white-bg.png'
            background_color: hex('#105A0A')
            ActionView:

                use_separator: True
                ActionPrevious:
                    color: hex('#E7D47D')
                    app_icon: 'icons8-bicycle-48.png'
                    title: ' Michal & Roi Bike Routs Recommendation App'
                    with_previous: False
                ActionOverflow:
                MyActionButton:
                    icon: 'icons8-minimize-window-48.png' if self.hovered else "icons8-minimize-window-50.png"
                    on_press: app.root_window.minimize()
                    border: 10,10,10,10
                MyActionButton:
                    icon: 'icons8-maximize-window-48.png' if self.hovered else "icons8-maximize-window-30.png"
                    on_press: app.MaxiMin_app_button()
                    border: 10,10,10,10
                MyActionButton:
                    # important: True
                    icon: 'icons8-close-window-48.png' if self.hovered else 'icons8-close-window-24.png'
                    on_press: app.stop()
                    border: 10,10,10,10


        GridLayout:
            id: inputs
            size: root.width, root.height
            cols:2

            Label:
                text: "What is your current location?"
                font_size: "15sp"
                bold: True
                color: 0, 0, 0, 1

            FloatLayout:
                TextInput:
                    id: location
                    size_hint: (0.95, 0.35)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    multinline: False

            Label:
                text: "How much time would you like to spend?"
                font_size: "15sp"
                bold: True
                color: 0, 0, 0, 1

            FloatLayout:
                TextInput:
                    id: time
                    size_hint: (0.95, 0.35)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    multinline: False


            Label:
                text: "How much location recommendations\n would you like to receive?"
                font_size: "15sp"
                bold: True
                color: 0, 0, 0, 1


            FloatLayout:
                TextInput:
                    id: recommendations
                    size_hint: (0.95, 0.35)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    multinline: False


        FloatLayout:
            size_hint: (1, 0.4)

            MyButton:
                background_color: 0,0,0,0
                text:"Submit"
                bold: True
                on_press: root.btn()
                font_size: "20sp"
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                size_hint: (0.2, 0.5)
                canvas.before:
                    Color:
                        rgba: hex('#1D8515') if self.hovered else hex('#105A0A')
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

